            <% end %>
          </li>
          <li>
            <%=  link_to cart_items_path ,class: 'nav-link text-nowrap text-light' do %>
              <p style="color:#F6E8E8;"><i class="fas fa-shopping-cart"></i> カート</p>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-nowrap text-light' do %>
              <p style="color:#F6E8E8;"><i class="fas fa-sign-out-alt"></i> ログアウト</p>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path,class: 'nav-link text-nowrap text-light' do %>
              <p style="color:#F6E8E8;"><i class="fas fa-store"></i> ながのCAKEについて</p>
            <% end %>
          </li>
          <li>
            <%= link_to items_path,class: 'nav-link text-nowrap text-light' do %>
