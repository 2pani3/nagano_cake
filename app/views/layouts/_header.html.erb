          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-nowrap text-light' do %>
              <p style="color:#F6E8E8;"><i class="fas fa-user-plus"></i> 新規登録</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path ,class: 'nav-link text-nowrap text-light' do %>
              <p style="color:#F6E8E8;"><i class="fas fa-sign-in-alt"></i>ログイン</p>
            <% end %>
          </li>
        <% end %>
