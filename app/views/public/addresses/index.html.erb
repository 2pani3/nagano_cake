<div class="container"></br>
   <div class="col-12 mx-auto">
     <h3>配送先登録/一覧</h3>
   </div>

   <%= form_with model: @address, url: addresses_path, id: 'address', class: 'address', local: true do |f| %>

   </br>
   
      <div class="row">
        <label class="col-sm-3">郵便番号(ハイフンなし) </label>
          <div class="col-sm-9">
            <%= f.text_field :postcode, placeholder:"0000000" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">住所</label>
          <div class="col-5">
            <%= f.text_field :address, placeholder:"東京都", class:"form-control" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">宛名</label>
          <div class="col-5">
            <%= f.text_field :name, placeholder:"令和道子", class:"form-control" %>
          </div>
          <div class="col-1">
            <%= f.submit "新規登録", class: "btn btn-sm btn-outline-danger" %>
          </div>
      </div>
    <%end%>



      </br>
      </br>

      <div class="col-7 sm-3">
       <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
         <% @addresses.each do |address| %>
          <tr>
            <th><%= address.postcode %></th>
            <th><%= address.address %></th>
            <th><%= address.name %></th>
            <th><%= link_to  "編集する", edit_address_path(address.id), class:"btn btn-outline-danger ml-5" %>
                <%= link_to "消去する", address_path(address), method: :delete, class: "btn btn-danger ml-3" , "data-confirm" => "本当に削除しますか？" %></th>
          </tr>
         <% end %>
        </tbody>
       </table>
      </div>

      </br>
      </br>
</div>