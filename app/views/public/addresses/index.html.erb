<div class="container"></br>
   <div class="col-12 mx-auto">
     <h3>配送先登録/一覧</h3>
   </div>

   <%= form_with model: @customer, url: information_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

   </br>

      <div class="row">
        <label class="col-sm-3">郵便番号(ハイフンなし) </label>
          <div class="col-sm-9">
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder:"0000000" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">住所</label>
          <div class="col-5">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都", class:"form-control" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">宛名</label>
          <div class="col-5">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都", class:"form-control" %>
          </div>
          <div class="col-1">
            <%= f.submit "新規登録", class: "btn btn-sm btn-outline-danger" %>
          </div>
      </div>

      </br>
      </br>

      <div class="col-7 sm-3">
       <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th><%= link_to  "編集する", edit_address_path(:id), class:"btn btn-outline-danger ml-5" %></th>
          </tr>
        </tbody>
        </thead>
       </table>
      </div>






 <%end%>
</div>