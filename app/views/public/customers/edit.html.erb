<div class="container"></br>
   <div class="col-12 mx-auto">
     <h3>会員情報編集</h3>
   </div>

    <%= form_with model: @customer, url: information_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    </br>

      <div class="row">
        <label class="col-sm-3">氏名</label>
          <div class="col-sm-9">
           <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %>
           <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">フリガナ</label>
          <div class="col-sm-9">
             <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_kana", placeholder:"レイワ" %>
             <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_kana", placeholder:"ミチコ" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">郵便番号(ハイフンなし) </label>
          <div class="col-sm-9">
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder:"0000000" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">住所</label>
          <div class="col-5">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都", class:"form-control" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">電話番号(ハイフンなし) </label>
          <div class="col-sm-9">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tell", placeholder:"0000000000" %>
          </div>
      </div>

      </br>

      <div class="row">
        <label class="col-sm-3">メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
          </div>
      </div>

      <div class="text-center my-5" >
        <%= f.submit "編集内容を保存", class: "btn btn-sm btn-outline-danger" %>     <%= f.submit "退会する", class: "btn btn-sm btn-outline-danger" %>
      </div>


    <%end%>
</div>