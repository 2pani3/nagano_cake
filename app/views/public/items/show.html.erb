<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-md-5">
      <%= image_tag @item.get_image(400,300) %>
    </div>
    <div class="col-md-7">
      <div class="mb-1">
        <h2 class="font-weight-bold"><%= @item.name %></h2>
        <h4><%= @item.discription %></h4>
      </div>
      <b>¥<%= @item.price.to_s(:delimited) %></b><p>(税込)</p>

      <% if (@item.is_active == TRUE) && (customer_signed_in?) %>
        <%= form_with model: @cart_item,url: cart_items_path,method: :post local: true do |f| %>
        <!--form.select オブジェクト名, プロパティ名(カラム名), タグの情報 [, オプション]-->
          <%= f.select :amount,(1..10) %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <!--第一引数オブジェクト名、第二引数valueで受け渡す値-->
          <!--cart_itemscontrollerのcart_items.find_by(item_id)に送ることができる-->
          <%= f.submit "カートに入れる", class: "btn btn-outline-danger" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>