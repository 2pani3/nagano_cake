<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル検索</h2>
      <%#= render 'info', user: current_user %>
      <!--<h2 class="mt-3">New book</h2>-->
      <%#= render 'books/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <%#= render 'index',users: @users %>
      <!--ここから部分テンプレート化する-->
      <table class='table'>
        <tbody>
          <% items.each do |item| %>
            <tr>
              <td>
                <%= link_to(item) do %>
                  <%= image_tag item.get_item_image, size: '50x50' %></td>
                  <%= item.name %>
                  <%= item.price %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!--部分テンプレートここまで-->


    </div>
  </div>
</div>