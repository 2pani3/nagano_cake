<div class="container pb-5">
 <div class="row">

    <div class="col-md-2">
     <%= render 'public/items/genre_search', genres: @genres %>
    </div>

    <div class="col-md-10">

      <div class="container px-5 px-sm-0">
        <h2 class="font-weight-bold">
        <% if params[:genre_id] %>
          <%= @genre.name %>(全<%= @items.count %>件)
        <% else %>
          すべての商品(全<%= @items_all.count %>件)
        <% end %>
        </h2>
      </div>

      <!--ここから部分テンプレート化する-->
      <div class="row wrapper-grid">
        <% @items.each do |item| %>
          <!--<div class="m-5 col-sm-11 col-md-7 col-lg-2">-->
            <div class="p-3" style= "width: 12rem;" >
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(180,200) %>
                <div class="font-weight-bold">
                  <p><%= item.name %></p>
                </div>
                <div class="font-weight-bold">
                  <p>¥<%= item.tax_price.to_s(:delimited) %></p>
                </div>
              <% end %>
            </div>
          <!--</div>-->
        <% end %>
      </div>
      <!--部分テンプレートここまで-->

    </div>

    <div class="footer container col-md-6 offset-md-3 py-2">
      <div class="pagination justify-content-center">
        <%= paginate @items, theme: 'admin_item' %>
      </div>
    </div>

  </div>
</div>