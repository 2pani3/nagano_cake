<h2 class="font-weight-bold">商品一覧(全<%= @items_all.count %>件)</h2>
<div class="container px-5 px-sm-0">
  <!--<div class="row">-->
    <!--<div class="col-md-3">-->
    <!--  <h2>ジャンル検索</h2>-->
      <%#= render 'info', user: current_user %>
      <!--<h2 class="mt-3">New book</h2>-->
    <!--  <%#= render 'genre_search', genre: @genre %>-->
    <!--</div>-->

    <!--<div class="col-md-8 offset-md-1">-->

      <!--ここから部分テンプレート化する-->
      <div class="row wrapper-grid">
        <% @items.each do |item| %>
          <div class="mx-5 col-2">
            <div class="p-3" style= "width: 12rem;" >
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(300,200) %>
                <div class="font-weight-bold">
                  <p><%= item.name %></p>
                </div>
                <div class="font-weight-bold">
                  <p>¥<%= item.price.to_s(:delimited) %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <!--部分テンプレートここまで-->
      <div class="row justify-content-center">
        <%= paginate @items,theme: 'customer' %>
      </div>

    </div>
  </div>
</div>