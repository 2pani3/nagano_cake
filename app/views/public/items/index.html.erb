      <h2 class="font-weight-bold">商品一覧(全<%= @items_all.count %>件)</h2>
      <!--ここから部分テンプレート化する-->
      <div class="row wrapper-grid">
        <div class="mx-auto col-11">
          <% @items.each do |item| %>
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_item_image, size: '320x240' %>
              <div class="font-weight-bold">
                <p><%= item.name %></p>
              </div>
              <div class="font-weight-bold">
                <p>¥<%= item.price.to_s(:delimited) %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <!--部分テンプレートここまで-->
      <div class="row justify-content-center">
        <%= paginate @items,theme: 'customer' %>
      </div>

    </div>
