<div class="container">
  <div class="row my-3">
    <h2 class="font-weight-bold">注文履歴詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-7">
      <b>注文情報</b>
      <table class="table my-3">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.shipping_postcode %><br>
            <%= @order.shipping_address %><br>
            <%= @order.shipping_name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_way_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-3 offset-2">
      <table class="table my-3">
        <b>請求情報</b>
        <tr>
          <th>商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <b>注文内容</b>
    <table class="table my-3">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
      <% orders.each do |ordered| %>
        <tr>
          <td><%= ordered.item.name %></td>
          <td><%= ordered.item.price.tax_price %></td>
          <td><%= ordered.amount %></td>
          <td><%= ordered. %></td>
        </tr>
      </tbody>


    </table>
  </div>
</div>