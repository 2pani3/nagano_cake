

<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

  <div class="d-grid col-11 mx-auto">
      <div class="row mb-3">
        <label class="col-sm-3 col-form-label">名前</label>
        <div class="col-sm-9">

          <div class="row">
            <label class="col-sm-3 col-form-label">(姓)</label>
            <div class="col-sm">
              <p>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %>
              </p>
          </div>

            <label class="col-sm-3 col-form-label">(名)</label>
            <div class="col-sm">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子" %>
            </div>
          </div>


          <div class="row">
            <label class="col-sm-3 col-form-label">(セイ)</label>
            <div class="col-sm">
             <p>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_kana", placeholder:"レイワ" %>
             </p>
            </div>
            <label class="col-sm-3 col-form-label">(メイ)</label>
            <div class="col-sm">
              <p>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_kana", placeholder:"ミチコ" %>
              </p>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <label class="col-sm-3 col-form-label">メールアドレス</label>
        <div class="col-sm-9">
          <p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
          </p>
        </div>
      </div>



      <div class="row">
        <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし) </label>
        <div class="col-sm-9">
          <p>
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder:"0000000" %>
          </p>
        </div>
      </div>


      <div class="row">
        <label class="col-sm-3 col-form-label">住所</label>
        <div class="col-5">
          <p>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都", class:"form-control" %>
           </p>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">電話番号(ハイフンなし) </label>
        <div class="col-sm-9">
          <p>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tell", placeholder:"0000000000" %>
          </p>
        </div>
      </div>

      <div class="row">
       <label class="col-sm-3 col-form-label"><%= f.label :password,'パスワード（６文字以上）' %></label>
         <div class="col-sm-9">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
         </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label"><%= f.label :password_confirmation,'パスワード（確認用）' %></label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
      </div>




    <!--<div class="row">-->
    <!--  <label class="col-sm-3 col-form-label">パスワード（６文字以上）</label>-->
    <!--  <div class="col-sm-9">-->
    <!--      <p>-->
    <!--        <input type="password" class="form-control" id="password"/>-->
    <!--      </p>-->
    <!-- </div>-->



     </div>


      <div class="text-center my-5" >
        <%= f.submit "新規登録", class: "btn btn-sm btn-outline-danger" %>
      </div>

   <!--btn-success-->


    <h2>既に登録済みの方</h2>
  <div class="actions">
    <%= link_to "こちらから", new_customer_session_path %>ログインしてください
    <!--(resource_name)-->
  </div>

<% end %>
<%#= render "publics/shared/links" %>
